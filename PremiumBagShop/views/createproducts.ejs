<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Create and manage products">
    <title>Admin - Create Products</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 antialiased">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="flex h-16 items-center justify-between">
                <div class="flex items-center">
                    <h1 class="text-xl font-bold text-gray-900 sm:text-2xl">Admin Dashboard</h1>
                </div>
                <div class="flex items-center gap-4">
                    <a href="/" class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors duration-200">
                        View Store
                    </a>
                    <a href="/logout" class="rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white hover:bg-red-500 transition-all duration-200">
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
        <!-- Success Message -->
        <% if (success && success.length > 0) { %>
        <div class="mb-6 rounded-lg bg-green-50 border border-green-200 p-4 animate-fade-in">
            <div class="flex items-center">
                <svg class="h-5 w-5 text-green-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <p class="text-sm font-medium text-green-800"><%= success %></p>
            </div>
        </div>
        <% } %>

        <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
            <!-- Create Product Form -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
                <div class="mb-6">
                    <h2 class="text-2xl font-bold text-gray-900">Create New Product</h2>
                    <p class="mt-1 text-sm text-gray-600">Add a new product to your store</p>
                </div>

                <form action="/owners/createproduct" method="POST" enctype="multipart/form-data" class="space-y-6">
                    <!-- Product Name -->
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                            Product Name
                        </label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name" 
                            required 
                            class="block w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200 sm:text-sm"
                            placeholder="e.g., Premium Leather Bag"
                        >
                    </div>

                    <!-- Price and Discount -->
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label for="price" class="block text-sm font-medium text-gray-700 mb-2">
                                Price ($)
                            </label>
                            <input 
                                type="number" 
                                id="price" 
                                name="price" 
                                required 
                                min="0"
                                step="0.01"
                                class="block w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200 sm:text-sm"
                                placeholder="99.99"
                            >
                        </div>

                        <div>
                            <label for="discount" class="block text-sm font-medium text-gray-700 mb-2">
                                Discount (%)
                            </label>
                            <input 
                                type="number" 
                                id="discount" 
                                name="discount" 
                                required 
                                min="0"
                                max="100"
                                class="block w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200 sm:text-sm"
                                placeholder="0"
                            >
                        </div>
                    </div>

                    <!-- Product Image -->
                    <div>
                        <label for="image" class="block text-sm font-medium text-gray-700 mb-2">
                            Product Image
                        </label>
                        <div class="flex items-center justify-center w-full">
                            <label for="image" class="flex flex-col items-center justify-center w-full h-48 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 transition-colors duration-200">
                                <div class="flex flex-col items-center justify-center pt-5 pb-6">
                                    <svg class="w-10 h-10 mb-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                                    </svg>
                                    <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">Click to upload</span> or drag and drop</p>
                                    <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
                                </div>
                                <input id="image" name="image" type="file" class="hidden" accept="image/*" required onchange="previewImage(event)">
                            </label>
                        </div>
                        <div id="preview" class="mt-4 hidden">
                            <img id="preview-img" class="w-full h-48 object-cover rounded-lg" alt="Preview">
                        </div>
                    </div>

                    <!-- Color Customization -->
                    <div class="space-y-4">
                        <h3 class="text-sm font-medium text-gray-900">Color Customization</h3>
                        
                        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
                            <!-- Background Color -->
                            <div>
                                <label for="bgColor" class="block text-xs font-medium text-gray-700 mb-2">
                                    Background
                                </label>
                                <div class="flex items-center gap-2">
                                    <input 
                                        type="color" 
                                        id="bgColor" 
                                        name="bgColor" 
                                        value="#ffffff"
                                        class="h-10 w-full rounded-lg border border-gray-300 cursor-pointer"
                                    >
                                </div>
                            </div>

                            <!-- Panel Color -->
                            <div>
                                <label for="panelColor" class="block text-xs font-medium text-gray-700 mb-2">
                                    Panel
                                </label>
                                <div class="flex items-center gap-2">
                                    <input 
                                        type="color" 
                                        id="panelColor" 
                                        name="panelColor" 
                                        value="#f3f4f6"
                                        class="h-10 w-full rounded-lg border border-gray-300 cursor-pointer"
                                    >
                                </div>
                            </div>

                            <!-- Text Color -->
                            <div>
                                <label for="textColor" class="block text-xs font-medium text-gray-700 mb-2">
                                    Text
                                </label>
                                <div class="flex items-center gap-2">
                                    <input 
                                        type="color" 
                                        id="textColor" 
                                        name="textColor" 
                                        value="#000000"
                                        class="h-10 w-full rounded-lg border border-gray-300 cursor-pointer"
                                    >
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="pt-4">
                        <button 
                            type="submit" 
                            class="flex w-full justify-center items-center gap-2 rounded-lg bg-blue-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 active:scale-95"
                        >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            Create Product
                        </button>
                    </div>
                </form>
            </div>

            <!-- Live Preview -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
                <div class="mb-6">
                    <h2 class="text-2xl font-bold text-gray-900">Live Preview</h2>
                    <p class="mt-1 text-sm text-gray-600">See how your product will look</p>
                </div>

                <div id="product-preview" class="rounded-xl overflow-hidden shadow-lg transition-all duration-300" style="background-color: #ffffff;">
                    <div class="aspect-square bg-gray-100 flex items-center justify-center">
                        <div id="preview-placeholder" class="text-center p-8">
                            <svg class="w-20 h-20 mx-auto text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <p class="mt-4 text-sm text-gray-400">Upload an image to preview</p>
                        </div>
                        <img id="preview-product-img" class="w-full h-full object-cover hidden" alt="Product preview">
                    </div>
                    
                    <div id="preview-panel" class="p-6" style="background-color: #f3f4f6;">
                        <h3 id="preview-name" class="text-xl font-bold mb-2" style="color: #000000;">Product Name</h3>
                        <div class="flex items-center gap-3 mb-4">
                            <span id="preview-price" class="text-2xl font-bold" style="color: #000000;">$0.00</span>
                            <span id="preview-discount" class="hidden text-sm bg-red-500 text-white px-2 py-1 rounded-full">0% OFF</span>
                        </div>
                        <button class="w-full bg-blue-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-blue-500 transition-colors duration-200">
                            Add to Cart
                        </button>
                    </div>
                </div>

                <!-- Quick Tips -->
                <div class="mt-6 rounded-lg bg-blue-50 border border-blue-200 p-4">
                    <h4 class="text-sm font-semibold text-blue-900 mb-2">ðŸ’¡ Quick Tips</h4>
                    <ul class="text-xs text-blue-800 space-y-1">
                        <li>â€¢ Use high-quality images for better presentation</li>
                        <li>â€¢ Choose contrasting colors for better readability</li>
                        <li>â€¢ Set realistic prices and discounts</li>
                        <li>â€¢ Keep product names clear and descriptive</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Image Preview
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview').classList.remove('hidden');
                    document.getElementById('preview-img').src = e.target.result;
                    
                    // Update live preview
                    document.getElementById('preview-placeholder').classList.add('hidden');
                    document.getElementById('preview-product-img').classList.remove('hidden');
                    document.getElementById('preview-product-img').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        }

        // Live Preview Updates
        document.getElementById('name').addEventListener('input', function(e) {
            document.getElementById('preview-name').textContent = e.target.value || 'Product Name';
        });

        document.getElementById('price').addEventListener('input', function(e) {
            document.getElementById('preview-price').textContent = '$' + (parseFloat(e.target.value) || 0).toFixed(2);
        });

        document.getElementById('discount').addEventListener('input', function(e) {
            const discount = parseInt(e.target.value) || 0;
            const discountEl = document.getElementById('preview-discount');
            if (discount > 0) {
                discountEl.classList.remove('hidden');
                discountEl.textContent = discount + '% OFF';
            } else {
                discountEl.classList.add('hidden');
            }
        });

        document.getElementById('bgColor').addEventListener('input', function(e) {
            document.getElementById('product-preview').style.backgroundColor = e.target.value;
        });

        document.getElementById('panelColor').addEventListener('input', function(e) {
            document.getElementById('preview-panel').style.backgroundColor = e.target.value;
        });

        document.getElementById('textColor').addEventListener('input', function(e) {
            document.getElementById('preview-name').style.color = e.target.value;
            document.getElementById('preview-price').style.color = e.target.value;
        });
    </script>
</body>
</html>