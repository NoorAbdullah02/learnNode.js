<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</head>

<body>

    <div
        class="w-full min-h-screen bg-gradient-to-br from-zinc-900 via-zinc-800 to-zinc-900 flex items-center justify-center p-6">
        <form
        action="/register" method="post"
            class="w-full max-w-md bg-zinc-800/50 backdrop-blur-xl rounded-2xl shadow-2xl border border-zinc-700/50 p-8 space-y-6">
            <!-- Header -->
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-white mb-2">Create Account</h2>
                <p class="text-zinc-400 text-sm">Join us today and get started</p>
            </div>

            <!-- Name Input -->
            <div class="space-y-2">
                <label class="text-zinc-300 text-sm font-medium">Full Name</label>
                <input type="text" placeholder="Enter Name" name="name"
                    class="w-full px-4 py-3 bg-zinc-900/50 border border-zinc-700 rounded-lg text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200">
            </div>

            <!-- Username Input -->
            <div class="space-y-2">
                <label class="text-zinc-300 text-sm font-medium">Username</label>
                <input type="text" placeholder="Enter Username" name="username"
                    class="w-full px-4 py-3 bg-zinc-900/50 border border-zinc-700 rounded-lg text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200">
            </div>

            <!-- Password Input -->
            <div class="space-y-2">
                <label class="text-zinc-300 text-sm font-medium">Password</label>
                <input type="password" placeholder="Enter Password" name="password"
                    class="w-full px-4 py-3 bg-zinc-900/50 border border-zinc-700 rounded-lg text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200">
            </div>

            <!-- Email Input -->
            <div class="space-y-2">
                <label class="text-zinc-300 text-sm font-medium">Email</label>
                <input type="email" placeholder="Enter Email" name="email"
                    class="w-full px-4 py-3 bg-zinc-900/50 border border-zinc-700 rounded-lg text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200">
            </div>

            <!-- Age Input -->
            <div class="space-y-2">
                <label class="text-zinc-300 text-sm font-medium">Age</label>
                <input type="number" placeholder="Enter Your Age" name="age"
                    class="w-full px-4 py-3 bg-zinc-900/50 border border-zinc-700 rounded-lg text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200">
            </div>

            <!-- Submit Button -->
            <button type="submit"
                class="w-full py-3 px-4 bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-700 hover:to-blue-600 text-white font-semibold rounded-lg shadow-lg hover:shadow-blue-500/50 transition duration-200 transform hover:scale-[1.02] active:scale-[0.98]">
                Login Account
            </button>

            <!-- Footer Text -->
            <p class="text-center text-zinc-500 text-sm mt-6">
                Already have an account? <a href="/login" class="text-blue-500 hover:text-blue-400 font-medium">Sign in</a>
            </p>
        </form>
    </div>

</body>

</html>